<h1>Listado de Clientes</h1>
<%= form_tag clientes_path, :method => 'get' do %>
<% content_tag :label do %>
Search term:
<%= text_field_tag :search, params[:search] %>
<%= submit_tag "Buscar", :name => nil %>
<% end %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Cedula</th>
      <th>Nombre</th>
      <th>Fch ncto</th>
      <th>Mail</th>
      <th>Genero</th>
      <th>Celular</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.cedula %></td>
        <td><%= cliente.nombre %></td>
        <td><%= cliente.fch_ncto %></td>
        <td><%= cliente.mail %></td>
        <td><%= mostrar_genero(cliente.genero) %></td>
        <td><%= cliente.celular %></td>
        <td><%= link_to 'Mostrar', cliente %></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Eliminar', cliente, method: :delete, data: { confirm: 'Seguro que lo quiere eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Cliente', new_cliente_path %>

<%= will_paginate @clientes, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %>
<br>
Clientes: <%= @clientes.count %>
